<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@android:color/transparent"
    tools:context=".bottosheets.cam_cap_bottom_sheet"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_cam_cap_bott_sheet_style"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@drawable/app_cam_cap_bott_tit_style"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datasets"
                android:textColor="#fff"
                android:padding="12dp"
                android:textSize="22dp"
                >
            </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingRight="12dp"
                >
            <ImageButton
                android:id="@+id/app_cam_bot_cal_butt_1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/ic_close_circle_outline__3_"
                >
            </ImageButton>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_cam_bot_new_butt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:background="@drawable/app_cam_cap_bott_tit_style"
            android:clickable="true"
            android:focusable="true"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Folder"
                android:textColor="#fff"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                >
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_outline"
                >
            </ImageView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_cam_bot_rec_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>