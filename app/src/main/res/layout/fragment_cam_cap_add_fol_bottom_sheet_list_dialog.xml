<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_alignParentBottom="true"
    tools:context=".bottosheets.cam_cap_add_fol_bottom_sheet"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_cam_cap_bott_sheet_style"
        android:orientation="vertical"
        android:paddingBottom="52px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@drawable/app_cam_cap_bott_tit_style"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Folder"
                    android:textColor="#fff"
                    android:padding="12dp"
                    android:textSize="22dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingRight="12dp"
                >
                <ImageButton
                    android:id="@+id/app_cam_bot_cal_butt_2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_close_circle_outline__3_"
                    >
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="22dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/app_cam_bot_cal_edt_txt"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#fff"
            android:paddingLeft="12dp"
            android:fitsSystemWindows="true"
            android:ems="10"

            >

        </EditText>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="0dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            >
            <Button
                android:id="@+id/app_cam_bot_cal_sav_butt"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:backgroundTint="#405CAC"
                >

            </Button>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>